{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src/",

    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},

    "sourceMap": true,
    "sourceRoot": "./src",

    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },

  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
